<div class="bg-gradient-to-br">    

    <div class="max-w-4xl mx-auto px-2 py-8">
        <div class="text-center">
            <p class="text-gray-700 mt-2 text-3xl font-bold">{{importsuccess}}</p>
            <p class="text-gray-600">{{message-success}}</p>
        </div>
    </div>

    <div class="flex justify-center gap-5 mb-8">
        <div class="bg-white rounded-xl p-6 shadow-md border border-slate-100 hover:shadow-lg transition-shadow">
            <div class="mb-3">
              <div class="inline-flex items-center justify-center w-12 h-12 rounded-lg bg-blue-100">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5.25 8.25h15m-16.5 7.5h15m-1.8-13.5-3.9 19.5m-2.1-19.5-3.9 19.5" />
                </svg>
              </div>
            </div>
            <p class="text-slate-500 text-sm font-medium">
              {{questionsimported}}
            </p>
            <p class="text-3xl font-bold text-green-700 mt-1">
              {{total}}
            </p>
        </div>
        <div class="bg-white rounded-xl p-6 shadow-md border border-slate-100 hover:shadow-lg transition-shadow">
            <div class="mb-3">
              <div class="inline-flex items-center justify-center w-12 h-12 rounded-lg bg-blue-100">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9.568 3H5.25A2.25 2.25 0 0 0 3 5.25v4.318c0 .597.237 1.17.659 1.591l9.581 9.581c.699.699 1.78.872 2.607.33a18.095 18.095 0 0 0 5.223-5.223c.542-.827.369-1.908-.33-2.607L11.16 3.66A2.25 2.25 0 0 0 9.568 3Z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 6h.008v.008H6V6Z" />
                </svg>
                </svg>
              </div>
            </div>
            <p class="text-slate-500 text-sm font-medium">
              {{categoriescreated}}
            </p>
            <p class="text-3xl font-bold text-blue-900 mt-1">
              {{categories}}
            </p>
        </div>
    </div>
    
    <div class="text-center mb-4">
        <div class="spinner-border text-primary mb-3" role="status">
        </div>
            <p class="text-gray-600">{{redirecting}} <strong><span id="countdown"> 10 </span> </strong> {{seconds}} </p>
    </div>
    
    <div class="flex justify-center">
        <div class="border border-blue-800 rounded-md px-3 py-2 mr-2 bg-blue-800 text-white hover:bg-blue-900 hover:text-white transition duration-700 font-semibold">
            <a href="{{questionbankurl}}" class="link-clean text-white">
            <div class="flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
            <path stroke-linecap="round" stroke-linejoin="round" d="m20.25 7.5-.625 10.632a2.25 2.25 0 0 1-2.247 2.118H6.622a2.25 2.25 0 0 1-2.247-2.118L3.75 7.5M10 11.25h4M3.375 7.5h17.25c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125Z" />
            </svg>
            {{gotoquestionbank}}
            </div>
        </a>
        </div>

        <div class="border-2 border-gray-600 rounded-md px-3 py-2 mr-2 text-gray-600 hover:bg-gray-600 hover:text-white  transition duration-300 font-semibold">
        <a href="{{courseurl}}" class="link-clean hover:text-white">
            <div class="flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
            <path stroke-linecap="round" stroke-linejoin="round" d="m2.25 12 8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" />
            </svg>
            {{backtocourse}}
            </div>
        </a>
        </div>
    </div>
    
    <div class="max-w-4xl mx-auto mt-12 h-16 text-center">
        <p class="text-sm text-gray-700">{{footer}} - {{year}}</p>
    </div>
</div>

<script>
    let seconds = 10;
    const countdownEl = document.getElementById('countdown');
    const redirectUrl = '{{questionbankurl}}';

    const interval = setInterval(() => {
        seconds--;
        countdownEl.textContent = seconds;

        if (seconds <= 0) {
            clearInterval(interval);
            window.location.href = redirectUrl;
        }
    }, 1000);
</script>